<Project Sdk="Microsoft.NET.Sdk">

    <Import Project="../Package.props" />

    <PropertyGroup>
        <Title>Semi.Avalonia</Title>
        <PackageReleaseNotes>Update to Avalonia 11.1.0.2</PackageReleaseNotes>
    </PropertyGroup>

    <PropertyGroup Condition="$([MSBuild]::IsTargetFrameworkCompatible('$(TargetFramework)', 'net8.0'))">
        <IsAotCompatible>true</IsAotCompatible>
    </PropertyGroup>

    <ItemGroup>
      <None Remove="Fonts\NotoSans-Regular.ttf" />
      <None Remove="Fonts\NotoSans.ttf" />
    </ItemGroup>

    <ItemGroup>
      <AvaloniaResource Include="Fonts\NotoSans.ttf" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Avalonia" Version="$(AvaloniaVersion)" />
        <PackageReference Include="Avalonia.Svg.Skia" Version="11.1.0" />
    </ItemGroup>

</Project>
